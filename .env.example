PORT=5000
MONGODB_URI=mongodb://localhost:27017/deepseek
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password_or_auth_code
EMAIL_SERVICE=QQ

# AI API配置
AI_API_KEY=your_api_key
AI_BASE_URL=https://openrouter.ai/api/v1
AI_MODEL=deepseek/deepseek-chat-v3-0324:free

# 可通过环境变量覆盖config.js中的模型配置
# 格式: JSON字符串，包含id, name, description
# 文本模型配置（示例）
TEXT_MODELS='[{"id":"deepseek/deepseek-r1:free","name":"DeepSeek R1","description":"预设的推理模型，适合专业讨论和问题解答"},{"id":"deepseek/deepseek-chat-v3-0324:free","name":"DeepSeek Chat","description":"通用对话模型，适合日常对话和创意内容"}]'

# 多模态模型配置（支持图像）（示例）
MULTIMODAL_MODELS='[{"id":"google/gemini-2.5-pro-exp-03-25:free","name":"Gemini 2.5 Pro","description":"谷歌多模态大模型，支持图像理解"},{"id":"google/gemini-2.0-flash-thinking-exp:free","name":"Gemini Flash","description":"谷歌快速响应模型，图像识别速度更快"},{"id":"qwen/qwen2.5-vl-72b-instruct:free","name":"Qwen VL","description":"通义千问多模态模型，支持中文图像描述和理解"}]'

# Swagger文档保护
SWAGGER_USER=admin
SWAGGER_PASSWORD=secure_password
ENABLE_SWAGGER=true
NODE_ENV=development 